// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id      String    @id
  name    String
  Account Account[]
}

model Account {
  id           String     @id
  number       String
  bankOffice   BankOffice @relation(fields: [bankOfficeId], references: [id])
  balance      Decimal
  owner        Client     @relation(fields: [clientId], references: [id])
  bankOfficeId String
  clientId     String
  Movement     Movement[]
}

model BankOffice {
  id      String    @id
  number  String
  name    String
  Account Account[]
}

// TODO: add datetime with created_at
model Movement {
  id        String       @id
  account   Account      @relation(fields: [accountId], references: [id])
  type      MovementType
  amount    Decimal
  accountId String
}

enum MovementType {
  deposit
  withdraw
}
